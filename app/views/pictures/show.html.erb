<h1>投稿詳細画面</h1>

<div class="row">
  <div class="col-sm-2">内容</div>
  <div class="col-sm-10"><%= @picture.content %></div>
</div>
<div class="row">
  <div class="col-sm-2">画像</div>
  <div class="col-sm-10"><%=image_tag @picture.photo %></div>
</div>

<% unless @picture.user == current_user %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(picture_id: @picture.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
