<div class="container">

<%= form_with(model: @blog, local: true, url: choose_new_or_edit) do |form| %>

  <% if @blog.errors.any? %>
    <div class="alert alert-warning">
      <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb_20">
    <%= form.label :title, class: 'col-sm-2' %>
    <%= form.text_field :title, class: 'col-sm-10' %>
  </div>
  <div class="row mb_20">
    <%= form.label :content, class: 'col-sm-2' %>
    <%= form.text_area :content, class: 'col-sm-10' %>
  </div>
  <div class="row center">
    <%= form.submit :class => "square_btn" %>
  </div>
<% end %>

</div>
